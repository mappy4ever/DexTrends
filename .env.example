# DexTrends Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# SUPABASE CONFIGURATION (Required)
# ===========================================
# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here

# Your Supabase anonymous key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ===========================================
# EXTERNAL API CONFIGURATION
# ===========================================
# PokeAPI Base URL (default: https://pokeapi.co/api/v2)
NEXT_PUBLIC_POKEAPI_URL=https://pokeapi.co/api/v2

# Pokemon TCG API Base URL (default: https://api.pokemontcg.io/v2)
NEXT_PUBLIC_POKEMON_TCG_API_URL=https://api.pokemontcg.io/v2

# Pokemon TCG SDK API Key (optional but recommended for higher rate limits)
NEXT_PUBLIC_POKEMON_TCG_SDK_API_KEY=your_pokemon_tcg_api_key_here

# TCGDex API Base URL (default: https://api.tcgdex.net/v2)
NEXT_PUBLIC_TCGDEX_API_URL=https://api.tcgdex.net/v2

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Application API URL (for internal API routes)
# In production, set this to your deployed URL
NEXT_PUBLIC_API_URL=http://localhost:3000

# Server port (default: 3000)
PORT=3000

# ===========================================
# TEST ENVIRONMENT CONFIGURATION
# ===========================================
# URL for running tests (default: http://localhost:3001)
TEST_URL=http://localhost:3001

# Test port for Playwright tests
TEST_PORT=3001

# ===========================================
# DEVELOPMENT & DEBUGGING
# ===========================================
# Node environment (development, production, test)
NODE_ENV=development

# Log level (ERROR, WARN, INFO, DEBUG)
LOG_LEVEL=INFO

# Enable debug logging (true/false)
DEBUG=false

# ===========================================
# PERFORMANCE & OPTIMIZATION
# ===========================================
# Cache TTL in milliseconds (default: 1 hour)
CACHE_TTL=3600000

# Maximum cache size in MB (default: 50)
MAX_CACHE_SIZE=50

# Enable Redis caching (true/false)
ENABLE_REDIS=false

# Redis connection URL (if ENABLE_REDIS=true)
REDIS_URL=redis://localhost:6379

# ===========================================
# SECURITY
# ===========================================
# Rate limiting - requests per minute (default: 60)
RATE_LIMIT_PER_MINUTE=60

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# ANALYTICS & MONITORING (Optional)
# ===========================================
# Google Analytics ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=

# ===========================================
# FEATURE FLAGS (Optional)
# ===========================================
# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable maintenance mode
MAINTENANCE_MODE=false

# ===========================================
# NOTES
# ===========================================
# 1. Never commit .env.local to version control
# 2. All NEXT_PUBLIC_* variables are exposed to the browser
# 3. Server-only variables should not have the NEXT_PUBLIC_ prefix
# 4. Update these values for different environments (dev, staging, prod)